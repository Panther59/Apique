<base:BaseWindow
	x:Class="RestClientLibrary.Screen.Windows.AddNameWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:base="clr-namespace:DataLibrary;assembly=DataLibrary"
	xmlns:local="clr-namespace:RestClientLibrary.Screen.Windows"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	Title="Add"
	MinWidth="300"
	SizeToContent="WidthAndHeight"
	Background="{DynamicResource AlternateBackgroundBrush}"
	Foreground="{DynamicResource PrimaryForeBrush}"
	WindowStartupLocation="CenterOwner"
	WindowStyle="ToolWindow"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<TextBlock Text="Name:" Margin="3" />
		<TextBox Name="txtName" Grid.Column="1" />
		<StackPanel
			Grid.Row="1"
			Grid.ColumnSpan="2"
			HorizontalAlignment="Right"
			Orientation="Horizontal">
			<Button
				Name="btnSelect"
				Width="70"
				Height="23"
				Margin="3"
				Content="Save" Click="btnSelect_Click" />
			<Button
				Name="btnCancel"
				Width="70"
				Height="23"
				Margin="3"
				Content="Cancel" Click="btnCancel_Click"
				IsCancel="True" />
		</StackPanel>
	</Grid>
</base:BaseWindow>
