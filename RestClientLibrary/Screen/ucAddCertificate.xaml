            Name="txtPass"
            Margin="0,42,30,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            FontFamily="Wingdings 2"
            FontSize="20"
            FontWeight="Bold"
            Foreground="{DynamicResource SuccessColorBrush}"
            Text="P"
            TextWrapping="Wrap"
            Visibility="Hidden" />
        <TextBlock
            Name="txtFail"
            Margin="0,42,30,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top"
            FontFamily="Wingdings 2"
            FontSize="20"
            FontWeight="Bold"
            Foreground="{DynamicResource ErrorColorBrush}"
            Text="O"
            TextWrapping="Wrap"
            Visibility="Hidden" />
        <TextBlock
            Margin="10,70,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Text="Alias:"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="txtCertName"
            Height="23"
            Margin="74,66,50,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Top"
            IsEnabled="{Binding IsCertificateNameEnabled}"
            Text="{Binding CertificateName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />-->

		</Grid>
		<Grid Margin="10" Visibility="{Binding IsFile,Converter={StaticResource BoolToVisibilityConverter}}">
			<Grid.RowDefinitions>
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
				<RowDefinition Height="Auto" />
			</Grid.RowDefinitions>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto" />
				<ColumnDefinition Width="*" />
				<ColumnDefinition Width="Auto" />
			</Grid.ColumnDefinitions>
			<TextBlock Text="File Path:" 
            Margin="3"
					   />
			<TextBlock Text="Password:" Grid.Row="1" 
            Margin="3"
					   />
			<TextBox Grid.Column="1" 
            Margin="3"
					 Text="{Binding Path,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsReadOnly="True"/>
			<PasswordBox
            Name="password"
            Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"
            Margin="3"
            base:PasswordBoxAssistant.BindPassword="True"
            base:PasswordBoxAssistant.BoundPassword="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
				<PasswordBox.Style>
					<Style BasedOn="{StaticResource {x:Type PasswordBox}}" TargetType="PasswordBox">
						<Setter Property="Visibility" Value="Visible" />
						<Style.Triggers>
							<DataTrigger Binding="{Binding ElementName=showPassword, Path=IsChecked}" Value="True">
								<Setter Property="Visibility" Value="Collapsed" />
							</DataTrigger>
						</Style.Triggers>
					</Style>
				</PasswordBox.Style>
			</PasswordBox>
			<Button
                Name="btnBrowse"
                Height="23"
                Margin="3"
				Grid.Column="3"
                Command="{Binding BrowseCertificateCommand}"
                Content="Browse" />
			<TextBlock
            Grid.Row="2"
            Margin="3"
            VerticalAlignment="Center"
            Text="Alias:" />
			
			<TextBox
            Grid.Row="2"
            Grid.Column="1"
				Grid.ColumnSpan="2"
            Margin="3"
            Text="{Binding CertificateName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
			<StackPanel
            Grid.Row="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
				<Button
                Name="btnSelect2"
                Width="70"
                Height="23"
                Margin="3"
                Command="{Binding SaveCertificateCommand}"
                Content="Save" />
				<Button
                Name="btnCancel2"
                Width="70"
                Height="23"
                Margin="3"
                Command="{Binding CloseWindowCommand}"
                Content="Cancel"
                IsCancel="True" />
			</StackPanel>
		</Grid>
	</Grid>
</data:BaseUserControl>
