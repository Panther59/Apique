<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:editing="clr-namespace:AdvanceTextEditor.Editing">
	<ResourceDictionary.MergedDictionaries>
		<ResourceDictionary Source="/AdvanceTextEditor;component/TextEditor.xaml" />
		<ResourceDictionary Source="/AdvanceTextEditor;component/Search/DropDownButton.xaml" />
		<ResourceDictionary Source="/AdvanceTextEditor;component/Search/SearchPanel.xaml" />
		<ResourceDictionary Source="/AdvanceTextEditor;component/CodeCompletion/CompletionList.xaml" />
		<ResourceDictionary Source="/AdvanceTextEditor;component/CodeCompletion/InsightWindow.xaml" />
	</ResourceDictionary.MergedDictionaries>

	<Style TargetType="{x:Type editing:LineNumberMargin}">
		<Setter Property="Control.Cursor" Value="/AdvanceTextEditor;component/themes/RightArrow.cur" />
	</Style>
</ResourceDictionary>
